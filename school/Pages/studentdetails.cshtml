@page
@model school.Pages.studentdetailsModel
@{
}
<div class="card text-center">
    @{
        if (Model.student !=null)
        {
            <div class="card-header">
                @Model.student.fname @Model.student.lname
            </div>
            <div class="card-body">
                <h5 class="card-text"> نام پدر:@Model.student.fathername</h5>
                <h5 class="card-text"> سن:@Model.student.age</h5>
                <h5 class="card-text"> کدملی:@Model.student.nationalcode</h5>
                <h5 class="card-text"> پایه تحصیلی:@Model.student.grade</h5>
                <form method="post">
                    <input type="submit" class="btn btn-danger" value="پاک کردن"/>
                    <a class="btn btn-primary" href="editstudent?studentid=@Model.studentid">ویرایش</a>
                </form>
                
            </div>
        }
    }
    <div class="card-footer text-body-secondary">
        <table class="table table-striped table-bordered rounded-3" dir="rtl">
            <thead>
                <tr>
                    <th scope="col">نام کلاس</th>
                    <th scope="col">نمره</th>
                    <th scope="col">زمان صدور</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var _reportcard in Model.reportcards)
                    {
                        <tr>
                            <td>@_reportcard.classroom.classname</td>
                            <td>@_reportcard.score</td>
                            <td>@_reportcard.issuedate.ToString("yyy/MM/d h:m:s")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
